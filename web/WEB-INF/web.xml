<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ChambreController</servlet-name>
        <servlet-class>com.controller.ChambreController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LocataireController</servlet-name>
        <servlet-class>com.controller.LocataireController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.controller.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EtatController</servlet-name>
        <servlet-class>com.controller.EtatController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Deconnexion</servlet-name>
        <servlet-class>com.DAO.Deconnexion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChambreController</servlet-name>
        <url-pattern>/ChambreController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LocataireController</servlet-name>
        <url-pattern>/LocataireController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/AdminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EtatController</servlet-name>
        <url-pattern>/EtatController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Deconnexion</servlet-name>
        <url-pattern>/Deconnexion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Auth.jsp</welcome-file>
    </welcome-file-list>
</web-app>
